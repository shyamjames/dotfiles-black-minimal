* {
    /* --- Palette Matching Waybar --- */
    bg-col:         #1a1a1a;    /* Off-Black Background */
    bg-col-light:   #1a1a1a;    /* Keep flat, same as bg */
    border-col:     #e6e6e6;    /* Off-White Border */
    selected-col:   #333333;    /* Dark Grey for selection */
    fg-col:         #e6e6e6;    /* Off-White Text */
    fg-col2:        #ffffff;    /* Pure White for selected text */
    grey:           #888888;    /* Muted Text */
    
    /* Re-map the 'blue' variable to White for the prompt box */
    blue:           #e6e6e6;    

    width: 800;
    font: "CaskaydiaCove Nerd Font Mono Bold 14";
}

element-text, element-icon, mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
    height: 360px;
    border: 2px;              /* Thin border */
    border-color: @border-col;
    background-color: @bg-col;
}

mainbox {
    background-color: @bg-col;
}

inputbar {
    children: [prompt, entry];
    background-color: @bg-col;
    border-radius: 5px;
    padding: 2px;
}

prompt {
    background-color: @blue;  /* Now White */
    padding: 6px;
    text-color: @bg-col;      /* Black Text inside the prompt */
    border-radius: 3px;
    margin: 20px 0px 0px 20px;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 6px;
    margin: 20px 0px 0px 10px;
    text-color: @fg-col;
    background-color: @bg-col;
}

listview {
    border: 0px 0px 0px;
    padding: 6px 0px 0px;
    margin: 10px 0px 0px 20px;
    columns: 2;
    lines: 5;
    background-color: @bg-col;
}

element {
    padding: 5px;
    background-color: @bg-col;
    text-color: @fg-col;
}

element-icon {
    size: 25px;
}

element selected {
    background-color: @selected-col;
    text-color: @fg-col2;
}

mode-switcher {
    spacing: 0;
}

button {
    padding: 10px;
    background-color: @bg-col-light;
    text-color: @grey;
    vertical-align: 0.5; 
    horizontal-align: 0.5;
}

button selected {
    background-color: @bg-col;
    text-color: @blue; /* Highlight active mode in White */
}

message {
    background-color: @bg-col-light;
    margin: 2px;
    padding: 2px;
    border-radius: 5px;
}

textbox {
    padding: 6px;
    margin: 20px 0px 0px 20px;
    text-color: @blue;
    background-color: @bg-col-light;
}
